    "@types/pg": "^8.15.4",
    "@types/winston": "^2.4.4",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
